{% extends 'base.html.twig' %}

{% block title %}Habitat{% endblock %}

{% block body %}
  
 <div class="container mt-5 custom-border">
        <div class="row m-4 ">
            <div class="col-md-6">
                <div class="card mb-4">
                    <img src="" class="card-img-top" alt="habitat Image">
                    <div class="card-body text-start mb-2">
                        <a class="text-secondary" title="Editer" href="{{ path('app_admin_habitat_edit', {'id': habitat.id}) }}">
                            {% include "_include/_components/_icons/_edit_icon_svg.html.twig" %}
                        </a>
                        <a type='button' class="text-danger me-3 mb-2"  data-bs-toggle="modal" data-bs-target="#deleteModal{{habitat.id}}" title="Supprimer">
                             {% include "_include/_components/_icons/_delete_icon_svg.html.twig" %}
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">name</div>
                            <div class="col-8">{{ habitat.name }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">description</div>
                            <div class="col-8">{{ habitat.description }}</div>
                        </div>
                        {# <div class="row mb-2">
                            <div class="col-4 font-weight-bold">animals</div>
                            <div class="col-8">{{ habitat.animals }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">images</div>
                            <div class="col-8">{{ habitat.images }}</div>
                        </div> #}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if delete_btn is defined %}
        {% include '/admin/habitat/_delete_modal.html.twig' with {'path_form' : path('app_admin_habitat_delete', {'id': habitat.id}), 'csrf_token': csrf_token, 'habitat': habitat } %}
    {% endif %}

{% endblock %}
