{% extends 'base.html.twig' %}

{% block title %}VeterinaryReport{% endblock %}

{% block body %}
  
 <div class="container mt-5 custom-card">
        <div class="row m-4 ">
            <div class="col-md-6">
                <div class="card mb-4">
                    <img src="" class="card-img-top" alt="veterinaryreport Image">
                    <div class="card-body text-start mb-2">
                        <a class="text-secondary" title="Editer" href="{{ path('app_admin_veterinaryreport_edit', {'id': veterinaryreport.id}) }}">
                            {% include "_include/_components/_icons/_edit_icon_svg.html.twig" %}
                        </a>
                        <a type='button' class="text-danger me-3 mb-2"  data-bs-toggle="modal" data-bs-target="#deleteModal" title="Supprimer">
                             {% include "_include/_components/_icons/_delete_icon_svg.html.twig" %}
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                                    <div class="row mb-2">
                <div class="col-4 font-weight-bold">detail</div>
                <div class="col-8">{{ veterinaryreport.detail }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">user</div>
                <div class="col-8">{{ veterinaryreport.user }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">animal</div>
                <div class="col-8">{{ veterinaryreport.animal }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">createdAt</div>
                <div class="col-8">{{ veterinaryreport.createdAt }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">updatedAt</div>
                <div class="col-8">{{ veterinaryreport.updatedAt }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">deletedAt</div>
                <div class="col-8">{{ veterinaryreport.deletedAt }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">deleted</div>
                <div class="col-8">{{ veterinaryreport.deleted }}</div>
            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if delete_btn is defined %}
        {% include '/admin/veterinaryreport/_delete_modal.html.twig' with {'path_form' : path('app_admin_veterinaryreport_delete', {'id': veterinaryreport.id}), 'csrf_token': csrf_token, 'veterinaryreport': veterinaryreport } %}
    {% endif %}

{% endblock %}
