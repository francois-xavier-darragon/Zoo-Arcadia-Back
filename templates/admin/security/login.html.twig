{% extends 'base_login.html.twig' %}

{% block title %}Connexion{% endblock %}


{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecter en temps que : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}
    
            <div class="d-flex">
                <div style="margin-right: 40px;">
                    <img class="col-md-6 d-flex align-items-center justify-content-center" style="width: 100%;" src="{{asset('images/ARCADIA.png')}}" alt="log-parc-animalier-arcadia">
                </div>    
                
                <div style="width: 100%;">
                    <label class='text-white mb-3' for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" required autofocus>
                    <label class='text-white mb-3' for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
            </div>
            
            <div class="d-flex justify-content-end">
                <button class="btn btn-lg btn-primary mt-4" type="submit">
                    Connexion
                </button>
            </div>

    </form>
{% endblock %}
