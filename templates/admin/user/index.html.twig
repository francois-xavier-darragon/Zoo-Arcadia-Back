{% extends 'base.html.twig' %}

{% block body %}
<div class='row mt-5 mb-5'>
    <div class='col-sm-12'> 
        <div class= "col-sm-12 d-flex justify-content-between mb-5">
            <h1>Liste des utilisateurs </h1>
            <a type="button" class='btn btn-primary pb-0 mb-3' href="{{ path('app_admin_user_new') }}">Ajouter un utilisateur</a>
        </div>
        <table class="table custom-table">
            <thead>
                <tr>
                    <th class="text-start">FirstName</th>
                    <th class="text-center">LastName</th>
                    <th class="text-center">Email</th>
                    <th class="text-end">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="text-start">{{ user.firstName }}</td>
                    <td class="text-center">{{ user.lastName }}</td>
                    <td class="text-center">{{ user.email }}</td>
                    <td class="text-end">
                        <a type='button' class='text-primary me-2' title="Voir" href="{{ path('app_admin_user_show', {'id': user.id}) }}"> 
                            {% include "_include/components/icons/show_icon_svg.html.twig" %}
                        </a>
                        <a type='button' class='text-secondary me-2' title="Ã©diter" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">
                              {% include "_include/components/icons/edit_icon_svg.html.twig" %}
                        </a>
                        <a type='button' class='text-danger me-2' title="supprimer" href="{{ path('app_admin_user_delete', {'id': user.id}) }}">
                             {% include "_include/components/icons/delete_icon_svg.html.twig" %}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div> 
</div>
{% endblock %}
