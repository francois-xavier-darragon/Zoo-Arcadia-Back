{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
  
 <div class="container mt-5 custom-border">
        <div class="row m-4 ">
            <div class="col-md-6">
                <div class="card mb-4">
                    <img src="{{ user.avatar ? uploaderHelper.asset(user.avatar, 'userAvatarFile') : asset('images/default/default.png') }}" class="card-img-top" alt="User-Image" style="width: 200px; height: 200px;">
                    <div class="card-body text-start mb-2">
                        <a class="text-secondary" title="Editer" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">
                            {% include "_include/_components/_icons/_edit_icon_svg.html.twig" %}
                        </a>
                        <a type='button' class="text-danger me-3 mb-2"  data-bs-toggle="modal" data-bs-target="#deleteModal{{ user.id }}" title="Supprimer">
                             {% include "_include/_components/_icons/_delete_icon_svg.html.twig" %}
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">Nom</div>
                            <div class="col-8">{{ user.lastName }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">Pr√©nom</div>
                            <div class="col-8">{{ user.firstName }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">roles</div>
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    {% set roleName = allRoles[role] %}
                                    <div class="col-8">{{ roleName }}</div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">email</div>
                            <div class="col-8">{{ user.email }}</div>
                        </div>
                        
                        {# <div class="row mb-2">
                            <div class="col-4 font-weight-bold">notices</div>
                            <div class="col-8">{{ user.notices }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">veterinaryReports</div>
                            <div class="col-8">{{ user.veterinaryReports }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">avatar</div>
                            <div class="col-8">{{ user.avatar }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">phone</div>
                            <div class="col-8">{{ user.phone }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">address</div>
                            <div class="col-8">{{ user.address }}</div>
                        </div> #}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if delete_btn is defined %}
        {% include '/admin/user/_delete_modal.html.twig' with {'path_form' : path('app_admin_user_delete', {'id': user.id}), 'csrf_token': csrf_token, 'user': user } %}
    {% endif %}

{% endblock %}
