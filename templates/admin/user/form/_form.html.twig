

{{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="mt-4 d-flex justify-content-between">
        <a type='button' class="btn btn-gradiant me-3 mb-2" title="revenir à la liste" href="{{ path('app_admin_habitat_index') }}">Revenir à la liste</a>

        <div class="row mb-6">
        {{ form_label(form.avatar, 'Avatar', {'label_attr': {'class': 'col-lg-4 col-form-label fw-semibold fs-6'}})|raw }}
        <div class="col-lg-8">
            {% include '_include/components/form/_image-upload-input.html.twig' with {
                input: form.avatar,
                inputFile: form.avatar.userAvatarFile,
                currentImg: user.avatar ? vich_uploader_asset(user.avatar, 'userAvatarFile') : asset('img/default-avatar.jpg')
            } %}
            <div class="form-text text-gray-700">
                {# {% include '_components/_forms/_help.html.twig' with {'iconType': 'info', 'text': form_help(form.avatar)|raw} %} #}
                <span class="d-block text-danger mt-4">
                    {{ form_errors(form.avatar)|raw }}
                </span>
            </div>
        </div>
    </div>
        {% if mode == 'Ajouter' %} 
             {# {% include '_include/components/form/_image-upload-input.html.twig' with {
                input: form.avatar,
                inputFile: form.avatar.userAvatarFile,
                currentImg: user.avatar ? vich_uploader_asset(user.avatar, 'userAvatarFile') : asset('img/default-avatar.jpg')
            } %} #}
            <button class="btn btn-primary" title="Valider">Valider</button>
        {% elseif mode == "Modifier" %}
            <button class="btn btn-primary" title="Valider">Valider</button>
        {% else %}
            <div class = "d-flex">
                <button class="btn btn-secondary" href="{{ path('app_admin_user_index') }}" title="valider">Valider</button>
                <button type='button' class="btn btn-danger me-3 mb-2"  data-bs-toggle="modal" data-bs-target="#deleteModal" title="supprimer">
                    supprimer
                </button>
            </div>
        {% endif %}  
    </div>
{{ form_end(form) }}

<div class="col-12 pt-2">
    {% if delete_btn is defined %}
        {% include 'admin/user/_delete_modal.html.twig' with {'path_form' : path('app_admin_user_delete', {'id': user.id}), 'id_token' : user.id } %}
    {% endif %}
</div>
