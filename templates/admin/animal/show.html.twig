{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
  
 <div class="container mt-5 custom-card">
        <div class="row m-4 ">
            <div class="col-md-6">
                <div class="card mb-4">
                    <img src="" class="card-img-top" alt="animal Image">
                    <div class="card-body text-start mb-2">
                        <a class="text-secondary" title="Editer" href="{{ path('app_admin_animal_edit', {'id': animal.id}) }}">
                            {% include "_include/_components/_icons/_edit_icon_svg.html.twig" %}
                        </a>
                        <a type='button' class="text-danger me-3 mb-2"  data-bs-toggle="modal" data-bs-target="#deleteModal" title="Supprimer">
                             {% include "_include/_components/_icons/_delete_icon_svg.html.twig" %}
                        </a>
                    </div>
                </div>
            </div>
             <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">firstName</div>
                            <div class="col-8">{{ animal.firstName }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">health</div>
                            <div class="col-8">{{ animal.health }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">veterinaryReports</div>
                            <div class="col-8">{{ animal.veterinaryReports }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">breed</div>
                            <div class="col-8">{{ animal.breed }}</div>
                        </div>
                        {# <div class="row mb-2">
                            <div class="col-4 font-weight-bold">habitat</div>
                            <div class="col-8">{{ animal.habitat }}</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 font-weight-bold">images</div>
                            <div class="col-8">{{ animal.images }}</div>
                        </div> #}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if delete_btn is defined %}
        {% include '/admin/animal/_delete_modal.html.twig' with {'path_form' : path('app_admin_animal_delete', {'id': animal.id}), 'csrf_token': csrf_token, 'animal': animal } %}
    {% endif %}

{% endblock %}
