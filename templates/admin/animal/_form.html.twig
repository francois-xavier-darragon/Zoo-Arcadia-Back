
{% set uploaderHelper = animal.images|first ? uploaderHelper.asset(animal.images|first, 'animalFile') : asset('images/default/default-750x500.png') %}
{% set style = "width: 187px; height: 125px;" %}

{{ form_start(form) }}
    <div>
        <div class="row">
            <div class="row" id="image-fields-list" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
            </div>
        </div>
        
        <button id="add-image-btn" type="button" class="btn btn-secondary mt-4 mb-3 me-3">Ajouter une image</button>
    </div>

    <button id="addBreedBtn" type="button" class="btn btn-secondary mt-4 mb-3 me-3" onclick="addBreed()">Ajouter une nouvelle race</button>
    <div id="addBreedField" style="display: none;">
        {{ form_row(form.addbreed) }}
    </div>

    {% if countBreeds != true %}
        <button id="selectBreedBtn" type="button" class="btn btn-secondary mt-4 mb-3" onclick="selectBreed()">Sélectionner une race éxistante</button>
        <div id="selectBreedFields" style="display: none;">
            {{ form_row(form.breed) }}
        </div>
    {% endif %}

    {{ form_row(form.habitat) }}
    {{ form_row(form.name) }}
    {{ form_row(form.health) }}

    {{ form_row(form.veterinaryReports) }}
   
    <div class="mt-4 d-flex justify-content-between">
    <a type='button' class="btn btn-gradiant me-3 mb-2" title="revenir à la liste" href="{{ path('app_admin_habitat_index') }}">Revenir à la liste</a>

    {% if mode == 'Ajouter' %} 
        <button class="btn btn-primary" title="Valider">Valider</button>
    {% elseif mode == "Modifier" %}
        <button class="btn btn-primary" title="Valider">Valider</button>
    {% else %}
        <div class = "d-flex">
            <button class="btn btn-secondary" href="{{ path('app_admin_animal_index') }}" title="valider">Valider</button>
            <button type='button' class="btn btn-danger me-3 mb-2"  data-bs-toggle="modal" data-bs-target="#deleteModal" title="supprimer">
                supprimer
            </button>
        </div>
    {% endif %}  
</div>

<template id="image-field-template" style="display: none;">
     {% include '_include/_components/_forms/_image-multi-upload-input.html.twig' %}
</template>

{{ form_end(form) }}

<div class="col-12 pt-2">
    {% if delete_btn is defined %}
        {% include '/admin/animal/_delete_modal.html.twig' with {'path_form' : path('app_admin_animal_delete', {'id': animal.id}), 'csrf_token': csrf_token, 'animal': animal } %}
    {% endif %}
</div>

<script>

document.addEventListener('DOMContentLoaded', function() {
    const addImageBtn = document.getElementById('add-image-btn');
    const imageFieldsList = document.getElementById('image-fields-list');
    let index = imageFieldsList.children.length;

    let existingImages = {{ existingImages is defined ? existingImages|raw : '[]' }};
    const defaultImagePath = "{{ asset('images/default/default-750x500.png') }}";
    const template = document.getElementById('image-field-template')

    addImageBtn.addEventListener('click', function() {
        const newImageField = createImageField(index, defaultImagePath);
        imageFieldsList.appendChild(newImageField);
        index++;
    });

    if (existingImages.length > 0) {
        existingImages.forEach(function(image, idx) {
            const imagePath = image.path ? image.path : defaultImagePath;
            const imageField = createImageField(idx, imagePath);
            imageFieldsList.appendChild(imageField);
        });
    } else {
        const defaultImageField = createImageField(index, defaultImagePath);
        imageFieldsList.appendChild(defaultImageField);
        index++;
    }

    function createImageField(index, imagePath) {
        const clone = template.content.cloneNode(true);

        const img = clone.querySelector('img');
        const input = clone.querySelector('input[type="file"]');
        const label = clone.querySelector('label');
        const button = clone.querySelector('button');

        img.src = imagePath;
        img.id = `balise-Img-${index}`;
        input.name = `animal[images][${index}][animalFile]`;
        label.setAttribute('id', `edit-image-button-${index}`);
        button.setAttribute('id', `remove-image-button-${index}`);

        const animalDiv = document.getElementById(`animal_images`)
        if(animalDiv) {
            animalDiv.classList.add('d-none');
        }

        return clone;
    }
});

</script>