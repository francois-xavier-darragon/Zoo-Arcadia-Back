{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
  
 <div class="container mt-5 custom-card">
        <div class="row m-4 ">
            <div class="col-md-6">
                <div class="card mb-4">
                    <img src="" class="card-img-top" alt="User Image">
                    <div class="card-body text-start mb-2">
                        <a class="text-secondary" title="Editer" href="{{ path('app_admin_image_edit', {'id': image.id}) }}">
                            {% include "_include/components/icons/edit_icon_svg.html.twig" %}
                        </a>
                        <a type='button' class="text-danger me-3 mb-2"  data-bs-toggle="modal" data-bs-target="#deleteModal" title="Supprimer">
                             {% include "_include/components/icons/delete_icon_svg.html.twig" %}
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                                    <div class="row mb-2">
                <div class="col-4 font-weight-bold">name</div>
                <div class="col-8">{{ image.name }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">habitats</div>
                <div class="col-8">{{ image.habitats }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">animals</div>
                <div class="col-8">{{ image.animals }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">userAvatarFile</div>
                <div class="col-8">{{ image.userAvatarFile }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">mimeType</div>
                <div class="col-8">{{ image.mimeType }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">originalName</div>
                <div class="col-8">{{ image.originalName }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">size</div>
                <div class="col-8">{{ image.size }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">src</div>
                <div class="col-8">{{ image.src }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">createdAt</div>
                <div class="col-8">{{ image.createdAt }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">updatedAt</div>
                <div class="col-8">{{ image.updatedAt }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">deletedAt</div>
                <div class="col-8">{{ image.deletedAt }}</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 font-weight-bold">deleted</div>
                <div class="col-8">{{ image.deleted }}</div>
            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if delete_btn is defined %}
        {% include '/admin/image/_delete_modal.html.twig' with {'path_form' : path('app_admin_image_delete', {'id': image.id}), 'id_token' : user.id } %}
    {% endif %}

{% endblock %}
